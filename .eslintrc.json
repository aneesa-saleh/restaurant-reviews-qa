{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:cypress/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "cypress"
    ],
    "env": {
        "cypress/globals": true
    },
    "ignorePatterns": [
        "app/**/*"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "warn"
    }
}